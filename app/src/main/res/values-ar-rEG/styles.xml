<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h4">
        <item name="android:fontFamily">@font/arabic_font_bold</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="h2">
        <item name="android:fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>
    <style name="h3">
        <item name="android:fontFamily">@font/tajawal_regular_ar</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="editText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textDirection">rtl</item>
    </style>
    <style name="editTextPhone">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textDirection">rtl</item>
    </style>
    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">17sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/tajawal_regular_ar</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewThin">
        <item name="android:textColor">@color/settingText1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/tajawal_regular_ar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">@color/settingText</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/almarai_regular_ar</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SmallTextViewThin">
    <item name="android:textColor">@color/settingText1</item>
    <item name="android:textSize">10sp</item>
    <item name="fontFamily">@font/tajawal_regular_ar</item>
    <item name="android:textAlignment">viewStart</item>

    </style>

</resources>