<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sizeShadow"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@color/g_gray700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp"
        android:visibility="invisible"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sizeSelected"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_gray500"
        app:layout_constraintStart_toStartOf="@id/sizeShadow"
        app:layout_constraintTop_toTopOf="@id/sizeShadow"
        app:layout_constraintEnd_toEndOf="@id/sizeShadow"
        app:layout_constraintBottom_toBottomOf="@id/sizeShadow"
        />

    <TextView
        android:id="@+id/sizeChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/sizeShadow"
        app:layout_constraintTop_toTopOf="@id/sizeShadow"
        app:layout_constraintEnd_toEndOf="@id/sizeShadow"
        app:layout_constraintBottom_toBottomOf="@id/sizeShadow" />

</androidx.constraintlayout.widget.ConstraintLayout>